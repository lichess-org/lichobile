.content_round
  width 100%
  height var(--content-height)
  display flex
  flex-flow column nowrap
  justify-content center
  min-height 0 // fix chrome bug
  .blindfold-true > .manipulable > piece
    display none
  .analyse-boardWrapper .blindfold-true > .manipulable > piece
    display initial
  .editor-board .blindfold-true > .manipulable > piece
    display initial
  @media only screen and (orientation: portrait) and (min-width 768px) and (min-height 768px)
    .actions_bar
      width 94vw
      margin 0 auto
    > .playTable
      > .antagonistInfos
        padding 0
  @media only screen and (orientation: landscape)
    display flex
    flex-flow row nowrap
    &.righty
      flex-direction row-reverse
  @media only screen and (orientation: landscape) and (min-width 768px) and (min-height 768px)
    &.righty
      .playable_board_wrapper, .board_wrapper
        margin-left 0
        margin-right 3vh

.playable_board_wrapper, .board_wrapper
  flex-shrink 0
  flex-grow 0
  @media only screen and (orientation: portrait)
    height 100vw
    width 100vw
    &.halfsize
      height calc(var(--content-height) / 2)
      width calc(var(--content-height) / 2)
      align-self center
  @media only screen and (orientation: portrait) and (min-width 768px) and (min-height 768px)
    height 94vw
    width 94vw
    margin auto
  @media only screen and (orientation: landscape)
    height var(--board-side-land)
    width var(--board-side-land)
  @media only screen and (orientation: landscape) and (min-width 768px) and (min-height 768px)
    height var(--board-side-land-tablet)
    width var(--board-side-land-tablet)
    margin auto
    margin-left 3vh

  > svg
    overflow: visible
    position: absolute
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    svg
      overflow visible
    > image
      opacity 0.5

  > svg *
    transition: 0.3s;

.playable_board_wrapper
  position relative
  @media only screen and (orientation: portrait) and (min-width 768px) and (min-height 768px)
    &:first-child
      margin-top 3vw

.display_board
  width 100%
  height 100%

.analyse-player_bar
  display flex
  flex-flow row nowrap
  justify-content space-between
  flex 0 0 auto
  font-size 0.95em
  color rgba(textDarkBg, 0.7)
  > .info
    display: flex;
    flex-flow: row nowrap;
    flex: 1 1 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-right 10px
    > .name
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    > .result
      padding 0 5px
      margin-right 5px
      border-right 1px solid borderColor
  > .player_bar_clock
    flex 0 0 auto
  &.halfsize
    width 'calc((100vh - %s) / 2)' % headerHeight
    align-self center
  @media only screen and (orientation landscape)
    display none

.table
  overflow hidden
  display flex
  flex-flow column nowrap
  min-height 0 // fix chrome 73 regression
  padding 0 1em
  flex 1 1 auto
  justify-content space-around
  @media only screen and (orientation: landscape) and (min-width 768px) and (min-height 768px)
    margin 3vh
    padding 0
    > .actions_bar
      flex 0 0 110px
      flex-flow row wrap
      > .action_bar_button
        flex 1 1 33%
        &:nth-child(1):nth-last-child(4),
        &:nth-child(2):nth-last-child(3),
        &:nth-child(3):nth-last-child(2),
        &:nth-child(4):nth-last-child(1) {
          flex 1 1 50%
        }

.mini_board_container
  .mini_board__text, .mini_board__player
    font-size 0.9em
  .mini_board__text
    display flex
    justify-content flex-end
  .mini_board__player
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
  .mini_board__user
    > .rating
      margin-left 0.5em
      font-size 0.9em
      opacity 0.8
  .countdown-timer
    color orange
    font-weight normal
  .mini_board__clock
    font-family 'Roboto'
  .score
    font-weight bold

.mini_board
  position: relative;
  height: 0;
  padding-bottom: 100%;
  width: 100%;
  > .mini_board_helper
    position: absolute;
    width: 12.5%;
    padding-bottom: 12.5%;
    bottom: 0;
    > .mini_board_wrapper
      position: absolute;
      width: 800%;
      height: 800%;
      bottom: 0;
