.cg-board
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  line-height 0
  background-size cover
  position relative
  width 100%
  height 100%

.cg-square
  position absolute
  width 12.5%
  height 12.5%
  &.selected
    background rgba(216, 85, 0, 0.2)
  &.checked
    background rgba(255, 0, 0, 0.4)
  &.current-premove
    background-color rgba(20, 30, 85, 0.5)

.withMoved
  .cg-square.last-move
    background rgba(216, 85, 0, 0.2)

.withDest
  .cg-square
    &.move-dest
      background radial-gradient(rgba(20, 85, 30, 0.5) 22%, #208530 0, rgba(0, 0, 0, 0.3) 0, rgba(0, 0, 0, 0) 0)
    &.premove-dest
      background radial-gradient(rgba(20, 30, 85, 0.5) 22%, #203085 0, rgba(0, 0, 0, 0.3) 0, rgba(0, 0, 0, 0) 0)

.coordinates
  .cg-square[data-coord-x]::after
    position absolute
    left 1px
    bottom 1px
    font-size 10px
    line-height 10px
    content attr(data-coord-x)
    color #fff
    opacity 0.5
  .cg-square[data-coord-y]::before
    position absolute
    right 1px
    top 1px
    font-size 10px
    line-height 10px
    content attr(data-coord-y)
    color #fff
    opacity 0.5

.cg-piece
  position absolute
  bottom 0
  left 0
  width 100%
  height 100%
  background-size cover
  z-index 2
  -webkit-transform translate3d(0,0,0)
  &.dragging
    z-index 9
    width 200%
    height 200%

#cg-moving-square
  display none
  position absolute
  background-color transparent
  border 1px solid rgba(255, 255, 255, 0.5)
  -webkit-transform translate3d(0,0,0)

