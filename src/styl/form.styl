// checkbox
.check_container
  display: flex;
  justify-content space-between
  align-items center
  min-height 30px
  > label
    width 100%
  > input[type='checkbox']
    margin-left 10px
  &.small
    min-height 25px
    input[type='checkbox']
      height 25px
      border-radius 12px
    input[type='checkbox']:after
      width 15px
      height 15px
    input[type='checkbox']:checked:after
      left 38px

input[type='text']
  border none

input[type='checkbox']
  flex 0 0 45px
  position relative
  margin 0
  border none
  height 26px
  border-radius 15px
  background-color #6b6b6b
  transition background-color 250ms ease-out
  outline none
input[type='checkbox']:checked
  background-color darken(green2, 10%)
input[type='checkbox']:after
  content ''
  display inline-block
  position absolute
  top 0px
  left 0px
  width 26px
  height 26px
  border-radius 50%
  background linear-gradient(to bottom, #3c3934, #33312e 100%)
  transition left 200ms
  box-shadow 0 1px 2.5px rgba(0,0,0,0.3)
input[type='checkbox']:checked:after
  left 20px

// select
.select_input
  background lighten(modalDarkBg, 10%)
  color modalDarkColor
  height 40px
  line-height 40px
  padding 0 10px
  font-size 0.85em
  position relative
  margin-top 15px
  box-shadow 0px 1px 2px 0px rgba(0,0,0,0.1)
  &.inline
    display inline-block
    width 49%
    margin-right 2%
    &:last-child
      margin-right 0
    select
      padding-right 0
    label
      &:after
        content ""
  select
    background transparent
    border none
    outline none
    width 100%
    position absolute
    left 0px
    -webkit-appearance none
    padding-left 90px
    padding-right 25px
    height 40px
    line-height 40px
  &.large_label select
    padding-left 150px
  &.no_label select
    padding-left 10px
  label
    padding: 0
    color labelText
    &:after
      content "â–¼"
      font-size 0.8em
      position absolute
      right 10px
      color #5f5f5f


// radio
.nice-radio
  display inline-block
  clear both
  width 50%
  label
    width 100%
    height 40px
    border-bottom 2px solid modalDarkBorder
  input.radio:empty
    display: none
  input.radio:empty + label
    position relative
    float left
    line-height 40px
    padding 0 20px
    font-size 0.9em
    -webkit-tap-highlight-color rgba(0,0,0,0)
  input.radio:empty + label:after
    position absolute
    display block
    bottom 12px
    left 0
    content ''
    text-align left
    width 2.5em
  input.radio:checked + label
    color blue
    border-color blue
    padding-left 30px
  input.radio:checked + label:after
    display inline-block
    font normal normal normal 14px/1 FontAwesome
    padding-top 20px
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    content: "\f00c"
    text-indent .9em

// text
.text_input_container
  display: flex;
  justify-content space-between
  align-items center
  min-height 30px

.forms-rangeSlider
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center
  > label
    flex 1 0 auto
  > input
    width 40%
  > .forms-sliderValue
    flex 0 0 45px
    text-align right

input[type=range]
  height: 25px;
  -webkit-appearance: none;
  background transparent
  &::-webkit-slider-runnable-track
    width: 100%;
    height: 5px;
    cursor: pointer;
    animate: 0.2s;
    box-shadow: 0px 0px 0px #000000;
    background: #6b6b6b
    border-radius: 1px;
    border: 0px solid #000000;
  &::-webkit-slider-thumb
    height: 18px;
    width: 18px;
    border-radius: 25px;
    background: linear-gradient(to bottom, #3c3934, #33312e 100%)
    box-shadow 0 1px 2.5px rgba(0,0,0,0.3)
    cursor: pointer;
    -webkit-appearance: none;
    margin-top: -7px;
  &:focus
    outline: none;
  &:focus::-webkit-slider-runnable-track
    background: gold

button.fat
  display block
  width 80%
  background gold
  color #fff
  padding 15px
  margin 20px auto
  &.active
    background lighten(gold, 10%)

.form-multipleChoiceContainer
  > .form-multipleChoice
    margin 0
    margin-top 15px
    max-width initial
    border-radius 2px

.form-multipleChoice
  display: flex
  flex-flow row wrap
  overflow hidden
  max-width 300px
  margin 0 auto
  box-shadow 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.2), 0 1px 5px 0 rgba(0,0,0,0.12)
  &.wrap
    flex-flow wrap
  div
    display flex
    flex 1 1 auto
    justify-content center
    align-items center
    font-size 0.9em
    padding: 10px
    text-align: center;
    transition: background 0.13s;
    border-right: 1px solid modalDarkBorder
    background: linear-gradient(to bottom, #3c3934, #33312e 100%)
    &:first-child
      border-radius: 3px 0 0 3px;
    &:last-child
      border-radius: 0 3px 3px 0;
      border-right 0
    &.selected
      font-weight bold
      background #4d4d4d
      color: #e3e3e3
      text-shadow 1px 1px 1px #000
      box-shadow 0 3px 4px rgba(0,0,0,0.15) inset

.no_arrow_after
  label:after
    content: ''

.form-error
  color #f00

input.form-error
  box-shadow inset 0px 0px 5px 1px #f00


.view-container.light
  input[type='checkbox'], input[type='checkbox']:before
    background-color #ccc
  input[type='checkbox']:after
    background linear-gradient(to bottom, #f5f5f5 0%, #ededed 100%)
    box-shadow 0 1px 2.5px rgba(0,0,0,0.3)
  input[type='checkbox']:checked, input[type='checkbox']:checked:before
    background-color green2
  .form-multipleChoice
    div
      background linear-gradient(to bottom, #f5f5f5 0%, #ededed 100%)
      text-shadow 0 1px 0 #fff
      border-color #d9d9d9
      &.selected
        background #dbdbdb
        color #000
        text-shadow 1px 1px 1px #fff !important
  .select_input
    background #fff
    color textDarkGray
  .nice-radio
    label
      background #fff
      color textGray
      border-color #ddd
  input[type=range]
    &::-webkit-slider-runnable-track
      background #bbb
    &::-webkit-slider-thumb
      background linear-gradient(to bottom, #f5f5f5 0%, #ededed 100%)
      box-shadow 0 1px 2.5px rgba(0,0,0,0.3)


.view-container.transp
  .form-multipleChoice
    div
      background linear-gradient(to bottom, rgba(0,0,0,0.4), rgba(0,0,0,0.5) 100%)
      border-color transpWhite015
      &.selected
        background transpWhite01

