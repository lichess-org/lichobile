.player, .opponent
  padding 20px 0
  overflow auto
  position relative
  font-family gothambold
  .infos
    float left
    h3
      font-size 10px
      color #C4A86F
      font-family gothamlight
      margin-top 5px
  .clock
    float left
    position absolute
    text-align right
    min-width 90px
    right 0
    font-size 30px

.clock
  &.running
    color #C4A86F

footer
  .player
    padding-top 23px

#board
  width 100%
  // height 100vw

.new-game
  header
    background #2D2D2D
    min-height 50px
    line-height 50px
    padding 0 20px
    color white
    font-family gothambold
    font-size 17px
    text-transform uppercase
    text-align center

