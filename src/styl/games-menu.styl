#games_menu
  background rgba(21,26,30,0.8)
  display flex
  flex-flow column nowrap
  aligns-items center
  justify-content center

#wrapper_games
  width 100%
  z-index 12

.wrapper_overlay_close
  position absolute
  width 100%
  height 100%
  z-index 10

.games_carousel
  @media only screen and (orientation landscape)
    display flex
    flex-flow row nowrap
    overflow-x auto

#games_menu__dots
  display flex
  flex-flow row nowrap
  justify-content center
  margin-bottom 1em
  .dot
    width 10px
    height 10px
    border 1px solid #fff
    border-radius 50%
    margin-right 5px
    &.current
      background #fff

.card
  background #2a2a2a
  border-radius 5px
  box-shadow 0 2px 3px 0 rgba(0,0,0,0.5)
  width 90vw
  height calc(90vw + 145px)
  margin-left 5vw
  > .boardWrapper
    height 90vw
  .infos
    text-align center
    text-transform uppercase
    position relative
  .icon-game
    font-size 20px
    color darken(gold, 10%)
    background #EFE1C7
    border solid 2px textDarkGray
    padding-top 10px
    display block
    height 45px
    width 45px
    position absolute
    top -22px
    left 0
    right 0
    margin 0 auto
    border-radius 50%;
    box-shadow: inset 0px 0px 3px 0px #96762F;
    z-index 3
  .description
    line-height 1
    padding 20px 0 10px
    height 100px
  h2
    margin-top 20px
    font-size 1.4em
    color #fff
    .rating
      font-size 0.8em
      color gold
  p
    font-size 0.9em
    color gold
    margin-top 20px
    .timeIndication
      display block
      margin-top 5px
  @media only screen and (min-width 600px)
    width 47.5vw
    height calc(47.5vw + 145px)
    margin-left 1.25vw
    > .boardWrapper
      height 47.5vw
  @media only screen and (orientation landscape)
    width calc(80vh - 80px)
    height 80vh
    max-width 350px
    max-height 500px
    margin-left 0
    margin-right 1em
    .description
      height initial
    > .boardWrapper
      width calc(80vh - 80px)
      height calc(80vh - 80px)
      max-width 350px
      max-height 350px
    &:first-child
      margin-left 2vw
    &:last-child
      margin-right 2vw
  @media only screen and (max-height 450px) and (orientation landscape)
    font-size 0.8em
    .icon-game
      display none
    .description
      padding 0
      height initial
      p
        margin-top 10px
    h2
      font-size 1em
      margin-top 10px
  @media only screen and (max-height 320px) and (orientation landscape)
    font-size 0.7em

.card.challenge
  background #c4a86f
  &.sending
    background lighten(textLightBg, 15%)
    .actions
      display flex
      background textLightBg
      button
        width 100%
        &:first-child
          border none
  color #fff
  .icon-game
    border-color darken(#c4a86f, 20%)
    color darken(#c4a86f, 40%)
  h2
    margin-top 10px
    font-size 1em
    font-weight 600
  p
    margin-top 10px
    text-transform none
    color #fff
  .variantName
    margin-right 5px
  .actions
    height 45px
    background #aa8f58
    border-radius 0 0 5px 5px
    button
      font-size 0.85em
      text-transform uppercase
      padding 0
      line-height 45px
      display inline-block
      width 50%
      &:first-child
        border-right 1px solid #9b814d
