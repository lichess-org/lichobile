  background-repeat no-repeat
  background-size 100% 100%
  .newGame-pools
    padding 2vmin
    > .newGame-pool
      padding 0
      fluid-type(16px, 35px)
      background-color transpWhite01
      border 1px solid lighten(#3d3d3d, 20%)
      color inherit
      &.active
        background-color rgba(gold, 0.3)

.tabs-navigation.homeSetup
  height 35px
  > .tab-button
    text-transform initial

.home__start
  grid-area start

.home__buttons
  display flex
  flex-flow column nowrap
  justify-content stretch
  margin 0 2vmin
  @media only screen and (min-width 601px)
    margin-top 1em
  @media only screen and (min-width 800px)
    margin-top 33px

.home__miniPuzzle
  grid-area puzzle

.home__featured, .home__miniPuzzle
  display flex
  flex-flow column nowrap
  margin 0 1vmin
  @media only screen and (min-width 601px)
    margin 0 1vmin 0 0

.home__tournament
  grid-area tournament
  padding 0px
  > .tournamentList
    > .tournament_item
      padding 2vmin
      > .tournamentListName
        white-space normal

.home__timeline
  grid-area timeline
  margin 0 2vmin
  margin-top 2vmin
  &:first-child
    margin-top 0
  &.loading
    padding-top 2em
  > .more
    color darken(textDarkBg, 20%)
    font-size 0.9em
    text-align right
  .timelineEntry
    color darken(textDarkBg, 20%)
    em
      color darken(textDarkBg, 20%)
    &.blogEntry
      color textDarkBg
    > strong
      color textDarkBg
      font-weight normal
    padding 0.5em 0
    font-size 0.9em
  @media only screen and (min-width 601px)
    margin-bottom 1em
    .timelineEntry
      &:first-child
        padding-top 0
    > ul, .more
      margin 0 1vmin

.homeTitle
  font-weight bold
  text-align center
  margin 2vmin 0 5px

.homeOfflineWrapper
  flex-grow 1
  display flex
  flex-flow column nowrap
  &.withBoard
    display initial

.homeOffline
  flex-grow 1
  display flex
  flex-flow column nowrap
  justify-content center
  h2
    margin 0 auto
    font-size 1.3em
    font-weight bold
    opacity 0.6
    &.homeTitle
      margin-bottom 0.5em

.playOffline
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center
  margin-top 1em
  > .fatButton
    margin 1em

.home-playbanInfo
  padding 1em
  text-align center
  > h2
    font-size 1.2em
    margin-top 0.5em
    line-height 2em
  > p
    font-size 0.9em
  > ul
    list-style initial
    margin-left 2em
    text-align left

.corresPoolWrapper
  flex-grow 1
  display flex
  flex-flow column nowrap
  > .corres_create
    flex 0 1 auto
    margin-top 20px
    display flex
    justify-content center

.corres_seeks
  flex 1 1 auto
  text-align left
  font-size 0.8em
  width 100%
  .must_signin
    text-align center
  th, td
    vertical-align middle
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    &:first-child
      text-align center
      width 30px
  th
    font-weight normal
    padding 1em
  td
    padding 0.5em
    border-bottom 1px solid lighten(#3d3d3d, 10%)

.corres_empty_seeks_list
  flex 1 1 auto
  display flex
  justify-content center
  align-items center

.corres_seek
  &.cancelCorresSeek
    background rgba(green, 0.15)
  &.active
    background rgba(gold, 0.3)

.view-container.light

  .home__timeline
    > .more
      color darken(textLightGray, 20%)
    .timelineEntry
      color darken(textLightGray, 20%)
      em
        color darken(textLightGray, 20%)
      &.blogEntry
        color themeBgLightText
      > strong
        color themeBgLightText
        font-weight bold

  .tabs-navigation.homeSetup
    background-color inherit

  .home
    background themeBgLightHeader

  .home__setupTabView
    background-color bglight
    background-image url("data:image/svg+xml,%3Csvg viewBox='-2 -2 54 54' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23dadada' stroke='%23dadada' stroke-linejoin='round'%0Ad='M38.956.5c-3.53.418-6.452.902-9.286 2.984C5.534 1.786-.692 18.533.68 29.364 3.493 50.214 31.918 55.785 41.329 41.7c-7.444 7.696-19.276 8.752-28.323 3.084C3.959 39.116-.506 27.392 4.683 17.567 9.873 7.742 18.996 4.535 29.03 6.405c2.43-1.418 5.225-3.22 7.655-3.187l-1.694 4.86 12.752 21.37c-.439 5.654-5.459 6.112-5.459 6.112-.574-1.47-1.634-2.942-4.842-6.036-3.207-3.094-17.465-10.177-15.788-16.207-2.001 6.967 10.311 14.152 14.04 17.663 3.73 3.51 5.426 6.04 5.795 6.756 0 0 9.392-2.504 7.838-8.927L37.4 7.171z'/%3E%3C/svg%3E%0A")
    .newGame-pool
      background-color transpWhite04
      border-color borderLightGray
      color inherit
      &.active
        background-color rgba(gold, 0.3)
    .corres_seek
      > td
        border-color borderLightGray


.view-container.transp
  .tabs-navigation.homeSetup
    background-color inherit
    > .tab-button
      text-shadow 0 1px 1px rgba(0,0,0,0.5)

  .corres_seek > td
    border-color transpWhite01

  .home__setupTabView
    background-color transpBlack02
    background-image none

  .home__timeline
    .timelineEntry
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
      color inherit
      em
        color inherit
      &.blogEntry
        color inherit
      > strong
        color inherit
        font-weight bold
    > .more
      color inherit
