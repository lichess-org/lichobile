.home
  padding-top 5px
  display: grid

  grid-template-areas:
    'lobby'\
    'start'\
    'tournament'\
    'timeline'\
    'puzzle'\
    '.'
  grid-gap: 2vmin

  @media only screen and (min-width 601px)
    grid-template-columns: repeat(2, 1fr)
    grid-template-rows: auto repeat(3, fit-content(0))
    grid-template-areas:
      'start start'\
      'lobby lobby'\
      'timeline tournament'\
      'timeline puzzle';

  @media only screen and (min-width 800px)

    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 12em repeat(2, fit-content(0));

    grid-template-areas:
      'start lobby lobby'\
      'start lobby lobby'\
      'timeline timeline tournament'\
      'timeline timeline puzzle';

.home__lobby
  grid-area lobby

.home__stats
  padding 2vmin
  display flex
  flex-flow row nowrap
  justify-content space-between
  > div
    flex 0 1 auto

.home__setupTabView
  height calc(((100vw - 40px) * 0.28) * 3 + 40px)
  @media only screen and (min-width 601px)
    height calc(((100vw - 40px) * 0.2) * 3 + 40px)
  background-color #262421
