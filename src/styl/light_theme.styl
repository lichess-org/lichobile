.view-container.light
  main
    color textLightBg

  #page
    background themeBgLight
    color textMediumGray

  #games_menu
    background rgba(0,0,0,0.6)

  button#newGameCorres
    color textMediumGray

  .fatButton
    background: linear-gradient(to bottom,rgba(245,245,245,1) 0%,rgba(240,240,240,1) 100%);
    text-shadow: 0 1px 0 #FFF;
    color: #848484;
    border-color #e2e2e2
    &.active, &:active
      background linear-gradient(to bottom,rgba(248,248,248,1) 0%,rgba(243,243,243,1) 100%);

  .mini_board
    .vsbloc
      background: linear-gradient(to bottom,rgba(245,245,245,1) 0%,rgba(240,240,240,1) 100%);
      border-color #e2e2e2

  .button
    &.active
      background activeBgLight

  .overlay, .menu-close-overlay
    background-color rgba(0,0,0,0.6)

  .card
    background #fff
    box-shadow 0px 2px 15px 0 rgba(0,0,0,0.5)
    .icon-game
      border-color #fff
    h2
      color textDarkGray
    &.challenge
      background gold
      &.sending
        background lighten(textMediumGray, 25%)
        .actions
          background lighten(textMediumGray, 10%)
      h2
        color #fff

  .list_item
    border-bottom-color #ddd
    &.active
      background-color darken(bglight, 5%)

  .ranking
    border-bottom-color borderLightGray

  .playTable
    color textDarkGray

  .antagonistInfos
    .rating
      color textMediumGray
    &.active
      background-color activeBgLight

  .replayMove
    &.active
      background-color darken(themeBgLight, 12%)

  .clock
    color #707070
    background-color themeBgLight
    border-color #ccc
    &.berserk
      border-color #dc322f
    &.running
      background-color #fff077
      color textDarkGray
    &.emerg
      background-color #efaaaa
      color textDarkGray
    &.correspondence
      &.running
        color darken(gold, 15%)
        background-color inherit
      &.offline
        background-color themeBgLight
        color #707070

  .action_bar_button
    color textGray
    &.disabled
      color rgba(textGray, 0.4)
    &.highlight
      background blue
      color #fff
    &.active
      background darken(themeBgLight, 8%)

  .gameMovesList
    background darken(themeBgLight, 4%)
    color textMediumGray

  .main_header
    &.board
      background themeBgLight
      box-shadow none
      .back_button, .main_header_button
        color textLightBg
        &.active
          background darken(themeBgLight, 8%)
      .back_button
        > button
          &.active
            background darken(themeBgLight, 8%)
      .chip
        color #eee
        background gold
        border-color #eee
      .main_header_title
        color textLightBg
    &:not(.board)
      .game_menu_button
        &.new_challenge:before
          background transparent

  .radio_list
    input.radio:checked + label
      background-color darken(bglight, 10%)

  .profilePerf
    &.active
      background darken(bglight, 5%)
    > .rating
      color textDarkGray
      > .nb
        color textLightBg
    > .name
      color textDarkGray

  .select_games_filter
    margin-top -1px

  .userGame
    background-color bglight
    color textMediumGray
    &.odd
      background-color darken(bglight, 5%)

  .trainingSection
    color textMediumGray

  .rankingPlayer
    &.active
      background darken(bglight, 5%)

  .followingPlayerAction
    &.active
      background darken(bglight, 5%)

  .tab
    height 45px

  .tabIndicator
    height 3px

  .engineSpinner
    color lighen(textLightBg, 5%)

  .tournamentInfoTime, .tournamentConditions
    border-bottom-color borderLightGray

  .navigationButton
    border-color borderLightGray

  .homeMoreButton
    > button
      background darken(bglight, 5%)
      &.active
        background darken(bglight, 2%)

  #tournamentPlayerInfoModal
    > header
      background-color #fff
      color textMediumGray
      border-bottom 1px solid borderLightGray
      > .playerModalHeader
        color textMediumGray
    > .modal_content
      color textMediumGray
      background-color themeBgLight

  .color-icon
    &.white
      &:before
        content: "K"
    &.black
      &:before
        content: "J"
