.game_form_popup
  background bglight
  > .popup_content
    padding 0
  .select_input
    margin-top 10px

.new_game_form_popup
  align-self flex-start
  margin-top calc(100vh * 0.1)

.game_form
  fieldset
    padding 0px 20px
  .check_container
    margin-top 15px

button.newGameButton
  width 100%
  height 45px
  border-radius 0 0 5px 5px
  margin 20px 0 0
  background gold
  color #FFF
  font-size 0.85em
  text-transform uppercase
  &[data-icon=E]:before
    color #fff
  &:before
    margin-right 10px
  &.active
    background lighten(gold, 10%)
  > .fa-hourglass-half
    font-size 20px

.rating_range
  margin-top 10px
  .select_input
    margin-top 5px
    select
      padding-left 60px

.setupPosition
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center
  margin-top 10px
  input[type=text]
    width 90%
    margin 10px auto
    border 1px solid borderLightGray
    padding 2px 4px
  .setupFenError
    color red

.newGame-preset_switch
  > .nice-radio
    > input.radio + label
      text-align center
      padding 0
      &:after
        content none

.newGame-pools
  display flex
  flex-flow row wrap
  justify-content space-between
  padding 20px

.newGame-pool
  height calc((100vw * 0.85 - 40px) * 0.31)
  flex 0 0 31%
  background rgba(255,255,255,0.7)
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.1);
  display flex
  flex-flow column
  justify-content center
  align-items center
  margin-bottom 10px
  padding 5px 0
  color textMediumGray
  opacity 1
  transition opacity 0.5s
  &.active
    background #fff
    box-shadow 0 2px 5px rgba(0,0,0,0.3)
  &.transp
    opacity 0.6
  @media only screen and (min-width 500px)
    height calc((100vw * 0.6 - 40px) * 0.31)
  @media only screen and (min-width 600px)
    height calc((100vw * 0.55 - 40px) * 0.31)
  @media only screen and (min-width 700px)
    height calc((100vw * 0.5 - 40px) * 0.31)
  @media only screen and (min-width 800px)
    height calc((100vw * 0.45 - 40px) * 0.31)
  @media only screen and (min-width 900px)
    height calc((100vw * 0.4 - 40px) * 0.31)

.newGame-clock
  font-size 22px
  letter-spacing 3px
  @media only screen and (max-width 320px)
    font-size 18px

.newGame-perf
  font-size 14px
  text-transform capitalize
  @media only screen and (max-width 320px)
    font-size 12px

