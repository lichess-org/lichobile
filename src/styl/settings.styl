.settings_list
  margin-bottom 15px
  height 100%
  .explanation
    padding 15px
  &.general
    margin-bottom 0
    height calc(100% - 40px)
  input[type='checkbox']
    background-color #888
  input[type='checkbox']:before
    background-color #555
  input[type='checkbox']:checked:before
    background-color gold


.radio_list
  .list_item
    padding 0
  input.radio:empty
    display none
  input.radio:checked + label
    background-color lighten(bgdark, 5%)
  input.radio:checked + label:after
    display inline-block
    font normal normal normal 14px/1 FontAwesome
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    content: "\f00c"
    text-indent .9em
  label
    display block
    padding 15px
    width 100%
    height 100%
    text-transform capitalize

.settingsChoicesInline
  display flex
  flex-flow row wrap
  justify-content space-between
  .nice-radio
    label
      height 30px
    input.radio:empty + label
      line-height 30px
      &:after
        bottom 9px
    input.radio.light:empty + label
      border-radius 0 15px 15px 0
    input.radio.dark:empty + label
      border-radius 15px 0 0 15px

.settingsChoicesBlock
  background-color selectBg

.app_version
  padding 10px 15px
  font-size 0.75em
  color darken(#DFDFDF, 10%)

.board_icon
  display inline-block
  position absolute
  right 15px
  width: 64px;
  height: 32px;
