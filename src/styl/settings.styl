.settings_list
  flex-grow 1
  &.multiChoices
    .list_item
      border-bottom none
      margin-bottom 1rem
  .explanation
    padding 15px
  .list_item
    > .fa-check
      margin-left 1em
    label
      font-family 'Roboto'
      font-weight 300
      font-size 1.1em

.app_version
  flex-grow 0
  padding 10px 15px
  font-size 0.75em
  color darken(#DFDFDF, 10%)

.radio_list
  .list_item
    padding 0
  input.radio:empty
    display none
  input.radio:checked + label
    background-color lighten(bgdarkPage, 5%)
  input.radio:checked + label:after
    display inline-block
    font normal normal normal 14px/1 FontAwesome
    font-size inherit
    text-rendering auto
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    content: "\f00c"
    margin-left 1em
  label
    display inline-block
    vertical-align middle
    padding .8em
    width 100%
    height 100%

#bgThemes
  &.loading
    .list_item input.radio + label
      opacity 0.5
    .list_item input.radio:checked + label
      opacity 1
    .list_item input.radio:checked + label:after
      content: '\f1ce'
      animation: fa-spin 2s infinite linear;

.theme-progressBarContainer
  position absolute
  top 15px
  left 170px
  width calc(100vw - 170px - 15px)
  height 20px
  border 1px solid transpWhite02
  font-size 11px
  line-height 18px
  padding-left 3px
  color #d5d5d5
  overflow hidden
  > .theme-progressBar
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition transform ease-out 500ms
    transform translateX(-100%)
    background rgba(gold, 0.5)
  > .theme-progressInner
    position absolute
    top 0
    left 3px
    z-index 2

.settingsChoicesInline
  display flex
  flex-flow row wrap
  justify-content space-between

.list_item.board_theme
  &.loading
