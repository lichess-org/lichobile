
// tab navigation
.tabs-nav-header
  position relative

.tabs-navigation
  display flex
  flex-flow row nowrap
  height 48px
  position relative
  background headerBgDark

.tab-button
  flex 0 1 auto
  text-transform uppercase
  text-align center
  padding 0 10px
  font-size 14px
  overflow hidden
  height calc(100% - 2px)
  color darken(headerBgDarkColor, 10%)
  &.active
    background-color lighten(bgdark, 10%)
  &.selected
    color gold

.tabIndicator
  position absolute
  bottom 0
  left 0
  height 2px
  background-color gold
  transition transform ease-out 200ms


// tab content
.tabs-view
  flex 1 1 auto
  display flex
  flex-flow row nowrap
  width 300vw
  transition transform ease-out 100ms

.tab-content
  flex 1 1 auto
  width 100vw
  display flex
  flex-flow column nowrap
  visibility hidden
  &.current
    visibility visible


.view-container.light
  .tabs-navigation
    background-color themeBgLight
  .tab-button
    color inherit
    &.active
      background-color darken(themeBgLight, 5%)
    &.selected
      color goldDark
  .tabIndicator
    background-color goldDark
